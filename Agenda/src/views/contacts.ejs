<%- include('head'); %>
<%- include('nav'); %>

<div class="container">

  <div class="row">
    
    <div class="col-lg-2 bg-secondary"></div>
    
    <div class="col-lg-8 my-2">
      <hr/>
      <h1 class="text-center">Contacts</h1>
      <a href="/contacts/create" class="btn btn-primary">Create Contact</a> 
      
      <% if(clist.length > 0) { %>
      
      <div class="responsive-table">

        <table class="table">
    
          <% clist.forEach( contact => { %>

          <tr>            
            <td> 
              <%= contact.name %>
            </td>
            <td> 
              <%= contact.email %>
            </td>
            <td> 
              <%= contact.phone %>
            </td>           
            <td>
              
              <a class="text-danger" href="/contact/delete/<%= contact._id %>" ">Delete</a>

            </td>
          </tr>   
    

          <% }); %>

        </table>
    


        <% } else { %>

          <br>
          <span>No data</span>
          
        <% } %>  

      </div>

    </div>


    <div class="col-lg-2 bg-secondary"></div>
    
  </div>

</div>

<%- include('footer'); %>

